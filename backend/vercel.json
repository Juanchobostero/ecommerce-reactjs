{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**"] 
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend"
    }
  ],
  "installCommand": "cd backend && pnpm install",  
  "buildCommand": "cd backend && pnpm build"
}